<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.sfl.qup.tms.domain.language.Language</class>

        <class>com.sfl.qup.tms.domain.translatable.TranslatableEntity</class>
        <class>com.sfl.qup.tms.domain.translatable.TranslatableEntityTranslation</class>

        <class>com.sfl.qup.tms.domain.translatable.TranslatableEntityField</class>
        <class>com.sfl.qup.tms.domain.translatable.TranslatableEntityFieldTranslation</class>

        <properties>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
        </properties>
    </persistence-unit>

</persistence>